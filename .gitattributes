# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
.env* text eol=lf
.gitignore text eol=lf

# Binary files
*.mp4 binary
*.mp3 binary
*.wav binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.avi binary
*.wmv binary
*.flv binary

# Language statistics (for GitHub)
*.py linguist-detectable=true
*.md linguist-detectable=true
*.sh linguist-detectable=true
